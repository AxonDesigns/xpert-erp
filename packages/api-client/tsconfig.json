{
  "extends": "@repo/typescript/base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["../../apps/backend/src/*"],
      "@env/*": ["../../packages/env/src/*"]
    },
    "allowImportingTsExtensions": null,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "**/apps/frontend"]
  }
}
