    "drizzle-orm": "^0.42.0",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.7.7",
    "pg": "^8.14.1",
    "stoker": "^1.4.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@repo/typescript": "workspace:*",
    "@types/bun": "latest",
    "@types/pg": "^8.11.13",
    "drizzle-kit": "^0.31.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
