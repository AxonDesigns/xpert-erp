{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assists": {
    "enabled": true,
    "actions": {
      "source": {}
    }
  },
  "overrides": [
    {
      "include": [
        "apps/frontend/**"
      ],
      "ignore": [
        "apps/frontend/src/routeTree.gen.ts"
      ],
      "linter": {
        "rules": {
          "a11y": {
            "noBlankTarget": "info",
            "useButtonType": "info"
          }
        }
      }
    }
  ]
}